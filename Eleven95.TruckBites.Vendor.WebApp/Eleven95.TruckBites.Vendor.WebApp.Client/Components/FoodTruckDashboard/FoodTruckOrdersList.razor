@using Eleven95.TruckBites.Data.Models
@using Eleven95.TruckBites.Services.Interfaces

@inject IOrderFulfillmentService OrderFulfillmentService

<h3>Orders</h3>

@if (AllOrders == null)
{
    <p>Loading orders...</p>
}
else
{
    <ul>
        @foreach (var order in AllOrders)
        {
            <li>
                <a href="/foodtrucks/@FoodTruckId/orders/@order.OrderId">
                    Order #@order.OrderId
                </a>
            </li>
        }
    </ul>
}

@code {
    [Parameter] [EditorRequired] public long FoodTruckId { get; set; }

    private List<Order>? AllOrders { get; set; }

    protected override async Task OnInitializedAsync()
    {
        AllOrders = await OrderFulfillmentService.GetOrdersForFoodTruck(FoodTruckId);
    }

}