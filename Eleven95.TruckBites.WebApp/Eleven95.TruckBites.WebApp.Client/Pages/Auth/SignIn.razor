@page "/auth/signin"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

@using Eleven95.TruckBites.Data.Models
@using Eleven95.TruckBites.Services.Interfaces
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<h2>SignIn</h2>

<EditForm Model="@Model" OnValidSubmit="SignInWithEmailAndPassword">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div>
        <label for="email">Email:</label>
        <InputText id="email" @bind-Value="Model.EmailAddress"/>
    </div>

    <div>
        <label for="password">Password:</label>
        <InputText id="password" type="password" @bind-Value="Model.Password"/>
    </div>

    <button type="submit">Login</button>
</EditForm>

@code {

    private EditContext EditContext;
    private SignInRequest Model;

    protected override void OnInitialized()
    {
        Model = new SignInRequest()
        {
            EmailAddress = "",
            Password = ""
        };

        EditContext = new EditContext(Model);
    }

    private async Task SignInWithEmailAndPassword()
    {
        await AuthService.SignInWithEmailAndPassword(Model);
        NavigationManager.NavigateTo("/");
    }

}