@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@attribute [Authorize]

@page "/account/orders"
@using Eleven95.TruckBites.Data.Models
@using Eleven95.TruckBites.Services.Interfaces
@using Eleven95.TruckBites.WebApp.Client.Components
@using Microsoft.AspNetCore.Authorization

@inject ILogger<Orders> Logger
@inject IOrderService OrderService

<h2>Orders</h2>

@if (UserOrders == null)
{
    <p>Loading...</p>
}
else
{
    <OrderList Orders="@UserOrders"/>
}

@code {
    private List<Order>? UserOrders { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Logger.LogInformation("OnInitializedAsync");
        UserOrders = await OrderService.GetAllOrdersAsync();
    }

}