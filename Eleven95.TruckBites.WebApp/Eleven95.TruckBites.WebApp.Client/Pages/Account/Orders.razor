@attribute [Authorize]

@page "/account/orders"
@using Eleven95.TruckBites.Data.Models
@using Eleven95.TruckBites.Services.Interfaces
@using Eleven95.TruckBites.WebApp.Client.Components
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

@inject ILogger<Orders> Logger
@inject IOrderService OrderService

<h2>Orders</h2>

@if (UserOrders == null)
{
    <p>Loading...</p>
}
else
{
    <OrderList Orders="@UserOrders"/>
}

@code {
    [CascadingParameter] public Task<AuthenticationState> Auth { get; set; }
    [PersistentState] public List<Order>? UserOrders { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await Auth;
        Console.WriteLine(authState.User.Identity?.IsAuthenticated);
        if (authState.User.Identity?.IsAuthenticated != true)
        {
            return;
        }

        if (UserOrders == null)
        {
            UserOrders = await OrderService.GetAllOrdersAsync();
        }
    }

}