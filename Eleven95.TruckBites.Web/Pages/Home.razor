@page "/"
@using Eleven95.TruckBites.Data.Models
@using Eleven95.TruckBites.Web.Clients.Interfaces
@inject IFoodTruckClient FoodTruckClient

<PageTitle>Home</PageTitle>

<h2>Food Trucks</h2>

@if (FoodTrucks == null)
{
    <p>Loading...</p>
}
else
{
    <ul>
        @foreach (var foodTruck in FoodTrucks)
        {
            <li>
                <div>
                    <h3>@foodTruck.DisplayName</h3>
                    <p>@foodTruck.Description</p>
                    <a href="@($"/foodtrucks/{foodTruck.FoodTruckId}")">View Menu</a>
                </div>
            </li>
        }
    </ul>
}

@code {

    private List<FoodTruck>? FoodTrucks { get; set; }

    protected override async Task OnInitializedAsync()
    {
        FoodTrucks = await FoodTruckClient.GetAllFoodTrucksAsync();
    }

}